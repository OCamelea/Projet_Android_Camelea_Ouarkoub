<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PokemonList">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="40dp"
                android:layout_gravity="left"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="-10dp"
                android:background="@color/ToolBarYellow"
                app:srcCompat="@drawable/ic_list_icon" />

            <View android:layout_width="3dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/grid_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/ToolBarYellow"
                app:srcCompat="@drawable/ic_grid_icon" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/pokemon_list_recyclerview"
            android:layout_gravity="center_horizontal"

            />


    </LinearLayout>
</FrameLayout>